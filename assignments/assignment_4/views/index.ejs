  </head>
  <body>
    <div class="parent">
      <div>
        <h1>TODO LIST</h1>
        <%users.forEach(user=>{%>
        <div class="details">
            <% if (user.isPromoted){%>
                <h3  class="green"> <%=user.name%></h3>
                <p  class="green"><%=user.email%></p>
                <form method="POST" action="/user/<%= user._id %>/edit?_method=PUT">
                    <button id="edit-<%= user.name %>" type="submit">Select</button>
                  </form>
                <form method="POST" action="/user/<%= user._id %>/delete?_method=DELETE">
                    <button id="delete-<%= user.name %>">Delete</button>
                  </form>

            <%}else{%>
                <h3  class="red"> <%=user.name%></h3>
                <p  class="red"><%=user.email%></p>
                <form method="POST" action="/user/<%= user._id %>/edit?_method=PUT">
                    <button id="edit-<%= user.name %>" type="submit">Select</button>
                  </form>
                  <form method="POST" action="/user/<%= user._id %>/delete?_method=DELETE">
                    <button id="delete-<%= user.name %>">Delete</button>
            <%}%>
        
         
          </form>
        </div>

        <%})%>
        <a class="form-class" href="/form"><button>Go To Add Page</button></a>
      </div>
    </div>
  </body>
</html>
