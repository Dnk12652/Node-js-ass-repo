<html>
  <head>
    <title>Document</title>
    <link rel="stylesheet" href="./style.css" />
    <style>
       
    </style>
  </head>
  <body>
    <div class="parent">
      <div>
        <h1>TODO LIST</h1>

        <%users.forEach(user=>{%>
        <div class="details">

            <% if (user.isPromoted==true){%>
                <h3  class="green"> <%=user.name%></h3>
                <p  class="green"><%=user.email%></p>
                <form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">
                    <button id="edit-<%= user.name %>" type="submit">Promote/Demote</button>
                  </form>
       

            <%}else if (user.isPromoted==false) {%>
              <h3  class="orange"> <%=user.name%></h3>
              <p  class="orange"><%=user.email%></p>
              <form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">
                  <button id="edit-<%= user.name %>" type="submit">Promote/Demote</button>
                </form>

            <%}
            else{%>
                <h3  class="red"> <%=user.name%></h3>
                <p  class="red"><%=user.email%></p>
                <form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">
                    <button id="edit-<%= user.name %>" type="submit">Demote</button>
                  </form>
           
            <%}%>
            <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
              <button id="delete-<%= user.name %>">Delete</button>
              </form>

        </div>

        <%})%>
        <a class="form-class" href="/form"><button>Go To Add Page</button></a>
      </div>
    </div>
  </body>
</html>
